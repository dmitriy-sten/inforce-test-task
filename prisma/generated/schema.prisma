generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String    @id @default(cuid())
  imageUrl String
  name     String
  count    Decimal
  size     Json // { "width": 200, "height": 200 }
  weight   String    @map("weight_g")
  coments  Comment[]
}

model Comment {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  description String
  date        DateTime @default(now())
}
